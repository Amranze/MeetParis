<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.amrane.amranetest">

    <!-- if you want to load images from the internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".intro.activity.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.FirstActivity"  android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".Activity.LoginActivity" android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity.SignupActivity" android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".profile.activity.ProfileActivity" android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">

        </activity>

        <activity
            android:name=".Activity.PictureSlider"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">

        </activity>

        <activity android:name=".account.activity.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>