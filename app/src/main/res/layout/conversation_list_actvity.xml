<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:layout_marginTop="-25dp"
    android:orientation="vertical">

    <com.page19.view.FEditText
        android:id="@+id/edt_profile_search"
        style="@style/OpenSansRegular55pxBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_eeeeee"
        android:drawablePadding="@dimen/margin_20"
        android:drawableStart="@drawable/ic_nutri_scale_search"
        android:hint="@string/search_profiles_title"
        android:maxLines="1"
        android:lines="1"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:padding="@dimen/margin_10"
        android:textColor="@color/black"
        android:textColorHint="@color/grey_85" />

    <ListView
        android:id="@+id/lv_profiles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="1dp"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/ll_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="34dp"
        android:orientation="vertical"
        android:visibility="gone">

        <com.page19.view.FTextView
            style="@style/OpenSansRegular70pxGrey85"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="@string/profile_no_data_lbl"
            android:layout_gravity="top"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_delete_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <com.page19.view.FButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/standard_10_dp"
            android:layout_marginRight="@dimen/standard_5_dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue_profile_round_corners_stroke"
            android:gravity="center"
            android:padding="@dimen/standard_15_dp"
            android:text="@string/profile_cancel"
            android:textAllCaps="false"
            android:textColor="@color/profile_color"
            android:textSize="@dimen/txt_50_px"
            custom:customFont="semibold"/>

        <com.page19.view.FButton
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/standard_5_dp"
            android:layout_marginRight="@dimen/standard_10_dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue_profile"
            android:gravity="center"
            android:padding="@dimen/standard_15_dp"
            android:text="@string/profile_delete"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_50_px"
            custom:customFont="semibold"/>

    </LinearLayout>
</LinearLayout>
